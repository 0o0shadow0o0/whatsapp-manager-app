PORT=3000
NODE_ENV=development

# MongoDB Connection URI
MONGODB_URI=mongodb://localhost:27017/whatsapp_manager

# JWT Secret Key
JWT_SECRET=your_very_strong_secret_key_for_jwt
JWT_EXPIRES_IN=7d

# Admin Credentials (for initial setup, consider a setup script for production)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=adminpassword

# Baileys Session Config
SESSION_CONFIG_ID=default_session

# Pino Logger Level (trace, debug, info, warn, error, fatal)
LOG_LEVEL=debug

# URL Webhook (if needed for external services, not primary for this app's core)
# URL_WEBHOOK=http://localhost:3000/webhook

# Enable Webhook (true/false)
# ENABLE_WEBHOOK=false

# Bot Name (for display purposes, e.g., in Baileys logs)
BOT_NAME="WhatsApp Manager Bot"

